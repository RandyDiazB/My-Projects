from dataclasses import dataclass, asdict
from datetime import datetime
from typing import List, Optional

@dataclass
class Transaction:
   
    amount: float
    category: str
    description: str
    date: str = datetime.now().strftime("%Y-%m-%d %H:%M:%S")

class FinanceTracker:
    def __init__(self):
        self.transactions: List[Transaction] = []

    def add_entry(self, amount: float, category: str, description: str):
        """Demonstrates basic error handling and validation."""
        if amount == 0:
            raise ValueError("Amount cannot be zero.")
        
        new_tx = Transaction(amount, category, description)
        self.transactions.append(new_tx)
        print(f" Added: {description} (${amount})")

    def get_report(self):
        """Shows off List Comprehensions and f-string formatting."""
        total = sum(t.amount for t in self.transactions)
        print(f"\n--- Financial Summary ---")
        print(f"Total Balance: ${total:.2f}")
        print(f"Total Transactions: {len(self.transactions)}")
